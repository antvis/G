{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:antvis/g.git"
  },
  "license": "MIT",
  "author": "xiaoiver",
  "scripts": {
    "dev": "vite",
    "build": "pnpm -r --sequential --if-present run build",
    "bundle-viz": "cross-env BUNDLE_VIS=1 PACKAGE=g npm run build",
    "contributor": "git-contributor",
    "cov": "jest --config jest.config.js --coverage",
    "doc": "dumi dev",
    "eslint": "eslint --ext .ts,.js ./packages --quiet",
    "eslint-fix": "eslint --fix --ext .ts,.js ./packages",
    "limit-size": "limit-size",
    "lint": "npm run eslint",
    "lint-staged": "lint-staged",
    "link-site": "node ./scripts/link-site.js",
    "prepare": "husky install",
    "prettier": "prettier --write './packages/**/*.{js,ts,md}'",
    "prepublish": "cp -r rust/pkg packages/g-webgpu/dist",
    "release": "pnpm -r --filter './packages/*' --stream exec npx --no-install semantic-release",
    "release:preview": "pnpm release --dry-run --no-ci",
    "start": "cd ./site && npm run start",
    "sync": "pnpm -r run sync",
    "test": "npm run test:browser & npm run test:serverside",
    "test:browser": "jest --config jest.config.js",
    "test:serverside": "jest --config jest.node.config.js",
    "wasm": "wasm-pack build ./rust --target web",
    "watch": "pnpm --parallel -r run watch"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "jest-environment-jsdom": "^26.6.2"
  },
  "devDependencies": {
    "@antv/util": "^3.3.1",
    "@commitlint/cli": "^8.3.6",
    "@commitlint/config-angular": "^9.1.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.51",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "canvas": "^2.11.2",
    "cross-env": "^6.0.3",
    "d3": "^7.8.5",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "24.3.6",
    "git-contributor": "~1.0.11",
    "gl": "^6.0.2",
    "hammerjs": "^2.0.8",
    "husky": "^7.0.4",
    "is-ci": "2.0.0",
    "jest": "^26.6.3",
    "jest-electron": "^0.1.12",
    "jest-matcher-deep-close-to": "^3.0.2",
    "jsdom": "^19.0.0",
    "limit-size": "^0.1.4",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "5.3.0",
    "pngjs": "^6.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "rollup": "^3.25.1",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "semantic-release": "^19.0.5",
    "semantic-release-monorepo": "^7.0.5",
    "sinon": "^11.1.2",
    "ts-jest": "^26.5.6",
    "typescript": "^5.1.3",
    "vite": "^3.2.7",
    "xmlserializer": "^0.6.1"
  },
  "limit-size": [
    {
      "path": "packages/g-lite/dist/index.umd.min.js",
      "limit": "150 Kb",
      "gzip": true
    },
    {
      "path": "packages/g/dist/index.umd.min.js",
      "limit": "150 Kb",
      "gzip": true
    },
