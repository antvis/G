{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:antvis/g.git"
  },
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "father build",
    "watch": "father build -w",
    "test": "yarn jest --coverage",
    "contributor": "git-contributor",
    "lint": "npm run eslint",
    "eslint": "eslint --ext .html,.ts,.js ./packages",
    "eslint-fix": "eslint --fix --ext .html,.ts,.js ./packages",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write './packages/**/*.{js,ts,md}'",
    "ci": "npm run lint && npm run bootstrap && npm run build && npm run test",
    "pre-publish": "npm run lint && rm -rf node_modules && npm install && npm run bootstrap",
    "postversion": "npm run build",
    "publish": "lerna publish",
    "publish-beta": "npm run pre-publish && lerna publish --dist-tag beta",
    "start": "npm run site:clean && npm run site:develop",
    "site:develop": "cross-env BABEL_ENV=site gatsby develop --open -H 0.0.0.0",
    "site:build": "yarn run site:clean && cross-env BABEL_ENV=site gatsby build --prefix-paths",
    "site:clean": "gatsby clean",
    "site:deploy": "npm run site:build && gh-pages -d public"
  },
  "lint-staged": {
    "**/*.{js,ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && npm run lint"
    }
  },
  "devDependencies": {
    "@antv/gatsby-theme-antv": "^1.0.8",
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-syntax-async-generators": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^9.0.1",
    "@types/chai": "^4.2.14",
    "@types/jest": "^25.0.0",
    "@types/lodash": "^4.14.119",
    "@types/node": "^14.0.23",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-const-enum": "^0.0.2",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-inline-webgl-constants": "^1.0.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-node-env-inline": "^0.4.3",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "dat.gui": "^0.7.2",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.0.0-beta6",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "father": "^2.30.6",
    "gatsby": "^2.21.33",
    "gh-pages": "^3.1.0",
    "git-contributor": "~1.0.8",
    "husky": "^4.2.5",
    "is-ci": "2.0.0",
    "jest": "^26.0.1",
    "jest-styled-components": "^6.2.1",
    "lerna": "^3.4.3",
    "less": "^3.9.0",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ptz-i18n": "^1.0.0",
    "raw-loader": "^1.0.0",
    "rollup-plugin-string": "^3.0.0",
    "source-map-support": "^0.5.9",
    "stats.js": "^0.17.0",
    "styled-components": "^3.4.6",
    "ts-jest": "^26.1.0",
    "ts-loader": "^8.0.1",
    "ts-node": "^7.0.1",
    "tslib": "^2.0.0",
    "typescript": "^3.2.2",
    "webpack": "^4.26.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^3.1.2"
  },
  "resolutions": {
    "@babel/core": "7.12.17",
    "@babel/standalone": "7.12.6",
    "monaco-editor": "0.21.2"
  }
}
