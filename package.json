{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:antvis/g.git"
  },
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "father build",
    "watch": "father build -w",
    "test": "jest",
    "test-watch": "jest --watch",
    "cov": "jest --coverage",
    "contributor": "git-contributor",
    "lint": "npm run eslint",
    "eslint": "eslint --ext .html,.ts,.js ./packages",
    "eslint-fix": "eslint --fix --ext .html,.ts,.js ./packages",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write './packages/**/*.{js,ts,md}'",
    "ci": "npm run lint && npm run bootstrap && npm run build && npm run test",
    "pre-publish": "yarn build",
    "publish": "lerna publish",
    "publish:next": "lerna publish prerelease --dist-tag next",
    "start": "cd ./packages/site && npm run start"
  },
  "lint-staged": {
    "**/*.{js,ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^9.0.1",
    "@types/chai": "^4.2.18",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "@umijs/fabric": "^2.5.13",
    "chai": "^4.3.4",
    "chai-almost": "^1.0.1",
    "cross-env": "^6.0.3",
    "eslint": "^7.28.0",
    "eslint-plugin-jest": "24.3.6",
    "father": "^2.30.6",
    "git-contributor": "~1.0.8",
    "husky": "^4.2.5",
    "is-ci": "2.0.0",
    "jest": "^26.6.3",
    "jest-electron": "^0.1.11",
    "lerna": "^3.4.3",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rollup-plugin-string": "^3.0.0",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.3.4"
  },
  "resolutions": {
    "monaco-editor": "0.21.2"
  }
}
