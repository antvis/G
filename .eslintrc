{
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "$": true,
    "AMap": true,
    "AMapUI": true,
    "DataSet": true,
    "G": true,
    "G_SVG": true,
    "G2": true,
    "_": true,
    "window": true,
    "document": true,
    "Image": true,
    "Event": true,
    "HTMLElement": true,
    "ImageData": true,
    "CodeMirror": true,
    "routie": true,
    "Clipboard": true,
    "MouseEvent": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "impliedStrict": true
  },
  "plugins": ["html", "prettier", "@typescript-eslint", "import"],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["warn", "error", "dir", "time", "timeEnd"]
      }
    ],
    "no-bitwise": [0],
    "experimentalDecorators": [0],
    "linebreak-style": [0],
    "comma-dangle": [0, "always-multiline"],
    "array-bracket-spacing": [0],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true,
        "mode": "strict"
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "function",
        "next": "function"
      }
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "no-debugger": "error",
    "object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": false
      }
    ],
    "arrow-parens": ["error", "always"],
    "jsdoc/require-returns-description": 0,
    "no-self-assign": 0,
    "no-unused-vars": 0, // @typescript-eslint/no-unused-vars
    "@typescript-eslint/no-unused-vars": 1,
    "no-inner-declarations": 0,
    "no-case-declarations": 0
  }
}
